    <script type="text/javascript">
    $(function() {
        var $fish = $('#fish');
        $.ajax({
            type: 'GET',
            url: '/getAquariumData?name=<%= query.name %>',
            success: function(data) {
                data.aquarium.fish.forEach(function(fish) {
                    $fish.append("<option value=\"" + fish.variety + "\">" + fish.variety + "</option>")
                });
               $('#test').append("<%= query.name %>");
            }
        });
    });

